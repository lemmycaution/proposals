
<div class="page-header">
	<h1>Hashtags <small>New</small></h1>
</div>
<div class="row">
	<div class="span10">

		<h2>Create a new subject/target</h2>
		
		<%= form_for @hashtag do |f| %>
		<fieldset>
			<div class="clearfix">
				<%= f.label :tag %>	
				<div class="input">
				<div class="input-prepend">
				<span class="add-on">#</span>
				<%= f.text_field :tag %>
				<span class="help-block">Please write just one hashtag without #</span>
				</div>
				</div>
			</div>	
			<div class="actions">
				<%= f.submit :class => "btn primary" %>
			</div>	
		</fieldset>
		<% end %>

	</div>
	<div class="span4">
		<h3>Latest Proposals</h3>
		<%= render "shared/latest_proposals" %>
	</div>
</div>



