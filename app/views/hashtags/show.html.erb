<div class="page-header">
	<h1>Hashtags <small>Show</small></h1>
</div>
<div class="row">
	<div class="span10">
		
		<h2><%= @hashtag.tag %></h2>
		
		<div id="latest_proposals">
			<% @proposals.each do |tweet| %>
			<blockquote id="<%=tweet.id%>">
				<p><%= tweet.text %></p>
				<small>
					<b><%= tweet.username %> / <%= tweet.tweeted_at %></b>
					<i><%= t('endorsed',:count => tweet.retweet_count) %></i>
				</small>
			</blockquote>
			<% end %>
		</div>

		<%= paginate @proposals %>

	</div>
<%= render "shared/latest_hashtags" %>	
</div>





